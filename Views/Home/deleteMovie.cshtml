@{
    ViewData["Title"] = "Delete Movie";
}

@model movieTemplate

<h2>Confirm Deletion</h2>
<br />
<h3>Are you sure you want to delete "@Model.Title" from your list of movies?</h3>
<br />
<form method="post" asp-controller="Home" asp-action="Delete">
    <button class="btn" type="submit">Delete</button>
    <a asp-controller="Home" asp-action="MovieList" class="btn btn-primary">Cancel</a>

    <input type="hidden" asp-for="MovieID"/>
</form>